{
  "compilerOptions": {
    "declaration": true,
    "pretty": true,
    "moduleResolution": "node",
    "target": "es2018",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noEmit": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext.asynciterable"
    ],
  },
  "include": [
    "src",
    "bin"
  ],
  "exclude": [
    "node_modules"
  ]
}
